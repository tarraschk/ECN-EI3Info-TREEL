#----------------------------------------------------------------------*
#                                                                      *
# TOOL DEFINITION FOR LINUX                                            *
#                                                                      *
#----------------------------------------------------------------------*

#----------------------------------------------------------------------*
#                                                                      *
# DEFINE COMPILER TO USE                                               *
#                                                                      *
#----------------------------------------------------------------------*

COMPILER := gcc
LINKER := g++
STRIP := strip

#----------------------------------------------------------------------*
#                                                                      *
# DEFINE SOURCE LIST                                                   *
#                                                                      *
#----------------------------------------------------------------------*

ALL_SOURCES := $(SOURCES) $(SOURCES_FOR_LINUX)

#----------------------------------------------------------------------*
#                                                                      *
# DEFINE LIBRARY LIST                                                  *
#                                                                      *
#----------------------------------------------------------------------*

ALL_LIBRARIES := $(LIBRARIES_FOR_LINUX)

#----------------------------------------------------------------------*
#                                                                      *
# DEFINE INSTALL PATH                                                  *
#                                                                      *
#----------------------------------------------------------------------*

INSTALL_PATH := /usr/local/dev-arm/arm-tools/bin

#----------------------------------------------------------------------*
#                                                                      *
# DEFINE GCC OPTIONS                                                   *
#                                                                      *
#----------------------------------------------------------------------*

OPTIONS_GCC := -DLINUX

#----------------------------------------------------------------------*
